<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= member.created_at %></td>
        <td>
          <%= link_to 'Show', member %>
          <%= link_to 'Edit', edit_member_path(member) %>
          <%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
